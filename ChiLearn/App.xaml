<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChiLearn"
             xmlns:behaviors="clr-namespace:ChiLearn.Behaviors"
             xmlns:converters="clr-namespace:ChiLearn.Models"
             x:Class="ChiLearn.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
                <ResourceDictionary>
                    <behaviors:BoolToTextConverter x:Key="BoolToTextConverter" />
                    <behaviors:BoolToColorConverter x:Key="BoolToColorConverter" />
                    <behaviors:StatusTextConverter x:Key="StatusTextConverter" />
                    <behaviors:ProgressToColorConverter x:Key="ProgressColorConverter"/>
                    <behaviors:MatchingResultToColorConverter x:Key="MatchingResultToColorConverter" />
                </ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
        
    </Application.Resources>

</Application>
