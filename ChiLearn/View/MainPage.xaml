<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ChiLearn.View.MainPage"
             Shell.NavBarIsVisible="False"
             BackgroundColor="Transparent">

    <VerticalStackLayout Padding="20" Spacing="30">

        <!-- Профиль -->
        <Frame BackgroundColor="White" CornerRadius="16" Padding="20" HasShadow="True">
            <Grid>
                <!-- Основное содержимое -->
                <VerticalStackLayout Spacing="20">
                    <!-- Центрированное изображение -->
                    <Frame HorizontalOptions="Center" 
                   BackgroundColor="#F97316" 
                   CornerRadius="50" 
                   Padding="0">
                        <Image Source="avatar.jpeg"
                       HeightRequest="180"
                       WidthRequest="180"
                       Aspect="AspectFill"
                       Scale="1.2"/>
                    </Frame>
                    <Frame BackgroundColor="Transparent" 
                           Padding="0" 
                           HasShadow="False"
                           HorizontalOptions="Fill"
                           BorderColor="Transparent">
                        <Grid ColumnDefinitions="*,1,*">
                            <!-- Кнопка Авторизации -->
                            <Button Grid.Column="0"
                                Text="Авторизация" 
                                BackgroundColor="#F97316" 
                                TextColor="White"
                                FontSize="16"    
                                IsVisible="{Binding IsLoggedIn, Converter={StaticResource InverseBoolConverter}}"
                                Command="{Binding AuthButtonCommand}"
                                CornerRadius="10"
                                Padding="5"
                                Margin="0,0,15,0"/>
                            <!-- Правое поле 15 -->

                            <!-- Вертикальный разделитель -->
                            <BoxView Grid.Column="1" 
                                 BackgroundColor="#cccccc" 
                                 WidthRequest="2"
                                 VerticalOptions="Fill"
                                 IsVisible="{Binding IsLoggedIn, Converter={StaticResource InverseBoolConverter}}"
                                 Margin="0,5"/>
                            <!-- Уменьшенные отступы самой линии -->

                            <!-- Кнопка Регистрации -->
                            <Button Grid.Column="2"
                                Text="Регистрация" 
                                BackgroundColor="#f1a94c" 
                                TextColor="White"
                                FontSize="16"    
                                Command="{Binding RegisterButtonCommand}"
                                IsVisible="{Binding IsLoggedIn, Converter={StaticResource InverseBoolConverter}}"
                                CornerRadius="10"
                                Padding="5"
                                Margin="15,0,0,0"/>
                            <!-- Левое поле 15 -->
                            <Button Grid.Column="0"
                                    Grid.ColumnSpan="3"
                                    Text="Выйти" 
                                    BackgroundColor="#F97316" 
                                    TextColor="White"
                                    FontSize="16"    
                                    IsVisible="{Binding IsLoggedIn}"
                                    Command="{Binding LogOutCommand}"
                                    CornerRadius="10"
                                    Padding="5"
                                    Margin="0,0,15,0"/>
                        </Grid>
                    </Frame>
                    <!-- Текст под изображением -->
                    <VerticalStackLayout HorizontalOptions="Center" Spacing="4">
                        <Label Text="{Binding CurrentUser.Name}" 
                       FontSize="24" 
                       FontAttributes="Bold"
                       HorizontalOptions="Center"/>
                        <Label Text="Пинь чилинь!" 
                       FontSize="14" 
                       TextColor="#6B7280"
                       HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </VerticalStackLayout>

                <!-- Кнопки в правом верхнем углу -->
                <HorizontalStackLayout HorizontalOptions="End" VerticalOptions="Start" Spacing="10">
                    <!--<Button Text="Выход" 
                    BackgroundColor="Transparent" 
                    TextColor="#F97316"
                    CornerRadius="10"
                    Padding="10,5"
                    Command="OnLogoutClicked"/>-->


                </HorizontalStackLayout>
            </Grid>
        </Frame>

        <Frame BackgroundColor="White" CornerRadius="16" Padding="15" HasShadow="True">
            <HorizontalStackLayout Spacing="30" HorizontalOptions="Center">
                <VerticalStackLayout Spacing="25" HorizontalOptions="Center">
                    <Label Text="HSK Уровень" FontSize="14" TextColor="#6B7280" HorizontalOptions="Center"/>
                    <Label Text="{Binding HskLevel}" FontSize="36" FontAttributes="Bold" TextColor="#2563EB"/>
                </VerticalStackLayout>

                <BoxView WidthRequest="1" BackgroundColor="#D1D5DB" HeightRequest="50"/>

                <VerticalStackLayout Spacing="10" HorizontalOptions="Center">
                    <Label Text="Уроков &#10;завершено"
                               FontSize="14"
                               TextColor="#6B7280"
                               HorizontalOptions="Center"/>
                    <Label Text="{Binding NumOfLastLesson}" FontSize="36" FontAttributes="Bold" TextColor="#10B981"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>
        </Frame>

        <!-- Прогресс -->
        <Frame BackgroundColor="White" CornerRadius="16" Padding="20" HasShadow="True">
            <VerticalStackLayout Spacing="15">
                <Label Text="Ваш прогресс" FontSize="20" FontAttributes="Bold"/>
                <ProgressBar Progress="{Binding PercentCompletedLevels}"
                     HeightRequest="10"
                     BackgroundColor="#E5E7EB"
                     ProgressColor="#34D399"/>
                <Label Text="{Binding ProgressBarPercent, StringFormat='Прогресс: {0}%'}" FontSize="14" TextColor="#6B7280"/>
                <!-- Привяжи к проценту -->
            </VerticalStackLayout>
        </Frame>
        <!-- TODO: Добавь здесь меню или переход к урокам -->

    </VerticalStackLayout>
</ContentPage>
